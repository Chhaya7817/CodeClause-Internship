<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="style.css" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
</head>
<body>
   <section id="mainSection">
    <h1> URL SHORTNER</h1>
       <div class="box">
        
        <% if (locals.error) { %>
         <p class="error"> <%= error %>  </p>
        <% } %>
        <form action="/" method="POST">
        <input type="url" id="url" placeholder=" Enter url " name="url">
     <div>
        <input type="submit" class="submit" value="CREATE URL">
     </div>
    
    </form>
    <div class="short-url">
        <% if (locals.short_url) { %>
            <a href="<%= short_url %>" target="_blank" id="myText"><%= short_url %> </a>
            <button class="btn" onclick="copyContent()">&nbsp;<i class="fa-regular fa-copy"></i></button>
        <% } %>
        
    
    </div>

       </div>

   </section>
   <div class="footer">@2023: copyright by Chhaya Chaudhary</div>
   <script>
      let text = document.getElementById('myText').innerHTML;
      const copyContent = async () => {
        try {
          await navigator.clipboard.writeText(text);
          var btn=document.getElementsByClassName("btn")[0];
          console.log(btn);
          btn.innerHTML=' &nbsp; <i class="fa-regular fa-clipboard"></i> copied!'
          console.log('Content copied to clipboard');
        } catch (err) {
          console.error('Failed to copy: ', err);
        }
      }
    </script>

</body>
</html>